<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.polaris.ipv6">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".view.viewActivity.MainActivity">
        </activity>
        <activity android:name=".view.viewActivity.SensorActivity" />
        <activity android:name=".view.viewActivity.SensorForecastActivity" />
        <activity android:name=".view.viewActivity.sensor.TemperatureActivity" />
        <activity android:name=".view.viewActivity.sensor.HumidityActivity" />
        <activity android:name=".view.viewActivity.sensor.SmokeActivity" />
        <activity android:name=".view.viewActivity.AreaActivity" />
        <activity android:name=".view.viewActivity.FireRecordActivity" />
        <activity android:name=".view.viewActivity.EscapeRoutesActivity" />
        <activity android:name=".view.viewActivity.chart.TemperatureChartActivity" />
        <activity android:name=".view.viewActivity.chart.HumidityChartActivity" />
        <activity android:name=".view.viewActivity.chart.SmokeChartActivity" />
        <activity android:name=".view.viewActivity.chart.SensorForecastChartActivity" />
        <activity android:name=".view.viewActivity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>